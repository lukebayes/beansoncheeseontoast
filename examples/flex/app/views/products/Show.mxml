<?xml version="1.0" encoding="utf-8"?>
<ap:ActiveView
    xmlns:ap="mx.actionpack.base.*"
    xmlns:mx="http://www.adobe.com/2006/mxml"
    backgroundImage=""
    backgroundColor="#ff0000"
    width="100%"
    height="100%"
    >
    <mx:Script>
      [Bindable]
      public var product:Product;
    </mx:Script>
    <mx:VBox width="100%" backgroundColor="#00ff00">
        <mx:Label text="{product.name}" />
        <mx:Label text="{product.description}" />
    </mx:VBox>
    <mx:Button label="Back to List" click="get('/products/index');" />
</ap:ActiveView>
